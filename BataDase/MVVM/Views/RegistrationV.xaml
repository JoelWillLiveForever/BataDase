                               HorizontalAlignment="Center"
                               Background="Transparent"
                               FontSize="16"
                               Margin="0,0,5,0"
                               Grid.Column="0"
                               FontFamily="{DynamicResource Font_MyLocalFont}">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Foreground">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{DynamicResource Color_Error}"/>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBlock.Style>
