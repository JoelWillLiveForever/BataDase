                    <ComboBox Name="ComboBox_Sex"
                              Grid.Column="1"
                              Background="Transparent"
                              SelectedIndex="0"
                              Style="{StaticResource Style_ComboBox}">
                        <ComboBoxItem Content="{DynamicResource Text_Male}"/>
                        <ComboBoxItem Content="{DynamicResource Text_Female}"/>
