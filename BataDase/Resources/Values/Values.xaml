<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- WindowChrome.CaptionHeight -->
    <sys:Double x:Key="Value_WindowChrome_CaptionHeight">22</sys:Double>

    <!-- Navigation menu width -->
    <sys:Double x:Key="Value_NavigationMenu_Width">150</sys:Double>

    <!-- Icons -->
    <sys:Double x:Key="Value_IconSize">10</sys:Double>
    <sys:Double x:Key="Value_Logo_Title_Icon_Height">12</sys:Double>
    <sys:Double x:Key="Value_Logo_Login_Icon_Height">30</sys:Double>
    
    <!-- Login Title Size -->
    <sys:Double x:Key="Value_Logo_Title_Text_FontSize">10</sys:Double>
    <sys:Double x:Key="Value_Logo_Login_Text_FontSize">28</sys:Double>
    
</ResourceDictionary>