<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light colors -->
    <Color x:Key="Color_Background_Surface">#ffffff</Color>
    <Color x:Key="Color_Primary">#2196f3</Color>
    <Color x:Key="Color_Primary_Variant">#1775d1</Color>
    <Color x:Key="Color_Error">#b00020</Color>
    <Color x:Key="Color_OnPrimary_OnError">#ffffff</Color>
    <Color x:Key="Color_OnBackground_OnSurface">#000000</Color>

    <Color x:Key="Color_Primary_Dark">#0069c0</Color>
    <Color x:Key="Color_Primary_Light">#6ec6ff</Color>

    <SolidColorBrush x:Key="Brush_OnSurface" 
                     Color="{DynamicResource Color_OnBackground_OnSurface}"
                     Opacity="0.05"/>

    <SolidColorBrush x:Key="Brush_Background_Foreground" 
                     Color="{DynamicResource Color_Primary}"
                     Opacity="0.00"/>
    
</ResourceDictionary>